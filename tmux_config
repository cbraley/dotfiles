# tmux configuration.

set-window-option -g xterm-keys on
set-option -g default-terminal "screen-256color"

# Set reload key to r.
bind r source-file ~/.tmux.conf

# Split panes using | and -.
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# https://unix.stackexchange.com/questions/23138/esc-key-causes-a-small-delay-in-terminal-due-to-its-alt-behavior
set -s escape-time 0

# Highlight the active pane in tmux with a green border.
set -g pane-border-fg white
set -g pane-active-border-fg brightgreen

# Allow mouse usage.
setw -g mode-mouse on
set -g mouse-select-pane on
set -g mouse-resize-pane on

# Navigate between panes via alt+arrow.
# Navigation between panes without ctrl-b.
bind -n 'M-Left'  select-pane -L
bind -n 'M-Down'  select-pane -D
bind -n 'M-Up'    select-pane -U
bind -n 'M-Right' select-pane -R

# Increase tmux scrollback length.
set-option -g history-limit 15000

# Show tmux messages for 3 seconds.
set-option -g display-time 3000

# tmux statusline.
# See https://i.stack.imgur.com/e63et.png for color codes.
set -g status-fg colour0
set -g status-bg colour108
set -g status-left-length 80
set -g status-left '#{?client_prefix,#[fg=colour7]#[bg=colour160],} #{session_name}'
set -g status-right-length 60
set -g status-right '#H â˜… %a %m-%d %H:%M'
